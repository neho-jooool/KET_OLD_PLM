package e3ps.test;

public class Solution3 {

    public static void main(String[] args) {

	int[] numbers = { 1, 1, 1, 1, 1 };
	int target = 3;

	Solution3 aa = new Solution3();

	int b = aa.solution(numbers, target);
	System.out.println("result = " + b);

    }

    public int solution(int[] numbers, int target) {
	int answer = 0;
	answer = dfs(numbers, 0, 0, target);
	return answer;
    }

    private int dfs(int[] numbers, int node, int sum, int target) {
	if (node == numbers.length) {
	    System.out.println("node == " + node);
	    if (sum == target)
		return 1;
	    return 0;
	}
	int a = dfs(numbers, node + 1, sum + numbers[node], target);
	int b = dfs(numbers, node + 1, sum - numbers[node], target);

	System.out.println("a : " + a);
	System.out.println("b : " + b);

	return a + b;
    }

}
