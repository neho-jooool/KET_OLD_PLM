<title>이노디터(InnoDitor) 배경이미지 업로드 연동 설명</title>
<style>
BODY { FONT-SIZE: 9pt; COLOR: #555555; FONT-FAMILY: 굴림; }
TD { FONT-SIZE: 9pt; COLOR: #555555; FONT-FAMILY: 굴림; }
</style>

<script language="javascript" src="./js/browser.js"></script>
<script language="javascript">
function fnLoadPage()
{
	// 이노디터에 이미 설정되어 있는 문서배경이미지가 있는 지 확인

	var objParam = null;

	if(g_browserCHK.wk || g_browserCHK.op)
	{
		// Chrome  / Safari / Opera
		objParam = opener.fnGetBackgroundImageValue();
	}
	else if(g_browserCHK.ie || g_browserCHK.ff)
	{
		// IE  /  FireFox
		if((null != window.dialogArguments) && ("undefined" != window.dialogArguments))
		{
			objParam = window.dialogArguments;
		}
	}

	if((null != objParam) && ("" != objParam[0]))
	{
		alert("배경이미지 Src : " + objParam[0]);
		alert("배경이미지 옵션 : " + objParam[1]);
	}
	else
	{
		alert("배경이미지 Src : 설정없음");
		alert("배경이미지 옵션 : 설정없음");
	}
}

function fnImageSend()
{
	var arrReturnValue = new Array();
	arrReturnValue[0] = "http://www.innoditor.com/sample/image/sample_3.gif";// src
	arrReturnValue[1] = "repeat";// repeat / no-repeat / repeat-x / repeat-y
	arrReturnValue[2] = false;// 배경이미지 제거 여부(true - 제거, false - 적용)


	if(g_browserCHK.wk || g_browserCHK.op)
	{
		// Chrome  / Safari / Opera
		opener.fnSetBackgroundImageValue(arrReturnValue);
	}
	else if(g_browserCHK.ie || g_browserCHK.ff)
	{
		// IE  /  FireFox
		window.returnValue = arrReturnValue;
	}

	window.close();
}
</script>
</head>

<body leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" bgcolor="#f7f7f7" onload="javascript:fnLoadPage();">

