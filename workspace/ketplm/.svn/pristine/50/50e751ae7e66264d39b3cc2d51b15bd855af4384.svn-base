.loading-indicator {
    border:1px solid #6593cf;
    background: #c3daf9;
    padding:5px 10px 5px 25px;
    font-size:11px;
    background-repeat: no-repeat;
    background-position:top left;
    padding-left:20px;
	height:15px;
	text-align:left;
}

#loading-mask{
	position:absolute;
	left:0;
	top:0;
    width:100%;
    height:100%;
    z-index:20000;
    opacity: .50;
    filter: alpha(opacity=50);
    background-color: #CCC;
}
#loading{
	position:absolute;
	left:45%;
	top:40%;
	padding:2px;
	z-index:20001;
    height:auto;
}
#loading img {
    /* margin-bottom:5px; */
}
#loading .loading-indicator{
	padding:5px 10px 5px 25px;
	/* background: #fbfbfb url('/plm/extcore/image/loading.gif') no-repeat 5px 5px; */
	color:#555;
	font:normal 11px tahoma, arial, helvetica, sans-serif;
	margin:0;
    text-align:center;
    height:auto;
    line-height: 16px;
    font:normal 11px tahoma, arial, helvetica, sans-serif;
}